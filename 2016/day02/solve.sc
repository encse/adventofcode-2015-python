case class Step(turn:Move.Value, distance:Int) {}

case class Player(x:Int, y:Int) {

  def normalize(i: Int) = Math.max(0, Math.min(2, i))

  def step(c: Char):Player = c match {
    case 'U' => Player(x, normalize(y-1))
    case 'L' => Player(normalize(x-1), y)
    case 'R' => Player(normalize(x+1), y)
    case 'D' => Player(x, normalize(y+1))
    case x =>
      println("wtf " + x )
      ???

  }

  def go(steps: String): Player = {
    if (steps.length == 0)
      this
    else
      step(steps(0)).go(steps.substring(1))
  }
  def key = y * 3 + x + 1

}

def solve(lines:List[String]) = {
  lines.foldLeft((Player(1, 1), "")){
    case ((p, res), steps) => {
      val newP = p.go(steps)
      (newP, res + newP.key.toString)
    }
  }
}

val input = """
